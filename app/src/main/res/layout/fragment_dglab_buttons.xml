<!-- res/layout/fragment_buttons.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/diy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="自娱自乐"
        app:layout_constraintBottom_toTopOf="@+id/musicControl"
        app:layout_constraintStart_toStartOf="@+id/musicControl" />

    <Button
        android:id="@+id/groupControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="群组控制"
        app:layout_constraintBottom_toTopOf="@+id/importWaveform"
        app:layout_constraintEnd_toEndOf="@+id/importWaveform" />

    <Button
        android:id="@+id/environmentControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="40dp"
        android:text="环境控制"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/motionControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="40dp"
        android:text="运动控制"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/importWaveform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="导入波形"
        app:layout_constraintBottom_toTopOf="@+id/motionControl"
        app:layout_constraintEnd_toEndOf="@+id/motionControl" />

    <Button
        android:id="@+id/musicControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="音乐控制"
        app:layout_constraintBottom_toTopOf="@+id/environmentControl"
        app:layout_constraintStart_toStartOf="@+id/environmentControl" />

</androidx.constraintlayout.widget.ConstraintLayout>
   