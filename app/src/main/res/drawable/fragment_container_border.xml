<!-- res/drawable/fragment_container_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框样式 -->
    <solid android:color="#FFFFFF" /> <!-- 填充背景颜色，可选择透明色 #00FFFFFF -->
    <stroke
        android:width="2dp"
        android:color="#FFEAD1DC" /> <!-- 边框颜色（例如柔和的浅茶玫瑰色） -->
    <corners android:radius="8dp" /> <!-- 边角圆角半径 -->
</shape>
